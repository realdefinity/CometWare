themeButton.BorderSizePixel = 0
themeButton.Text = ""
themeButton.Font = Enum.Font.GothamBold
themeButton.TextSize = 20
themeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
themeButton.AutoButtonColor = false

